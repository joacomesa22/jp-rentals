---
import ClientCard from "../../components/ClientCard.astro"
import Title from "../../components/Title.astro"
import { wrapper } from "../../styles/styling"
import {CLIENTS} from "../../consts/clients"
---


<section class="pt-32 flex justify-center items-center">
    <div class=`flex flex-col justify-center items-center w-full ${wrapper} gap-16`>
        <Title title="Clientes Satisfechos" text="Lorem ipsum dolor sit, amet consectetur adipisicing elit. Nobis, itaque!" />
        <div class="flex justify-between items-center w-full">
            {CLIENTS.map(client => {
                return <ClientCard author={client.author} comment={client.comment} city={client.city} img={client.img}/>
            })}
        </div>
    </div>
</section>