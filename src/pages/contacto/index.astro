---
import Layout from "../../layouts/Layout.astro"
import DivEffect from "../../components/DivEffect.astro"
import {wrapper} from "../../styles/styling"

---

<Layout title="JP Rentals - Contacto" description="JP Description">
    <section class="min-h-screen flex justify-center py-32">
        <DivEffect as="div" class=`${wrapper} flex w-full`>
            <div class="w-[60%] h-full">
                <img src="./assets/img/apartment.jpg" alt="Apartment" class="h-full rounded-l-md">
            </div>
            <div class="flex flex-col w-[40%] p-8">
                <div>
                    <h1 class="text-2xl">Contactanos</h1>
                    <p class="text-sm">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eos laudantium repellendus exercitationem.</p>
                </div>
                <div class="flex flex-col text-sm font-semibold">
                    <span>jprentals@gmail.com</span>
                    <span>+54 11 7389 3344</span>
                    <span>Buenos Aires, Argentina</span>
                </div>
                <form action="#">
                    <div>
                        <label for="nombre">Nombre</label>
                        <input type="text" name="nombre">
                    </div>
                    <div>
                        <label for="email">Email</label>
                        <input type="email" name="email">
                    </div>
                    <div>
                        <label for="mensaje">Mensaje</label>
                        <textarea name="mensaje"/>
                    </div>
                    <input type="submit" value="Enviar">
                </form>
            </div>
        </DivEffect>
    </section>
</Layout>