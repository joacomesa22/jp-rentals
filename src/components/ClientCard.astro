---
import DivEffect from "./DivEffect.astro"
const {comment, author, city, img} = Astro.props
---
<DivEffect as="article" class="flex flex-col items-center gap-4 justify-center p-6 w-full max-w-[260px]">
    <div class="flex flex-col items-center justify-center gap-2">
        <div class="flex items-center justify-center gap-1">
            <img src="./assets/icons/star.svg" alt="star icon">
            <img src="./assets/icons/star.svg" alt="star icon">
            <img src="./assets/icons/star.svg" alt="star icon">
            <img src="./assets/icons/star.svg" alt="star icon">
            <img src="./assets/icons/star.svg" alt="star icon">
        </div>
        <p class="max-w-[200px] text-center">"{comment}"</p>
    </div>

    <div class="flex items-center gap-2">
        <img src={img} alt="Testimonial" class="max-w-[40px] rounded-full">
        <div>
            <p class="text-sm">{author}</p>
            <p class="text-xs">{city}</p>
        </div>
    </div>
</DivEffect>