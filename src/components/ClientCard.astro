---
const {text, autor, from} = Astro.props
---
<article class="relative bg-white text-darkest flex flex-col items-center gap-4 justify-center rounded-md border border-darkest p-6 w-full max-w-[260px]">
    <div class="flex flex-col items-center justify-center gap-2">
        <div class="flex items-center justify-center gap-1">
            <img src="./assets/icons/star.svg" alt="star icon">
            <img src="./assets/icons/star.svg" alt="star icon">
            <img src="./assets/icons/star.svg" alt="star icon">
            <img src="./assets/icons/star.svg" alt="star icon">
            <img src="./assets/icons/star.svg" alt="star icon">
        </div>
        <p class="max-w-[200px] text-center">"{text}"</p>
    </div>

    <div class="flex items-center gap-2">
        <img src="./assets/img/testimonial.jpg" alt="Testimonial" class="max-w-[40px] rounded-full">
        <div>
            <p class="text-sm">{autor}</p>
            <p class="text-xs">{from}</p>
        </div>
    </div>

    <div class="absolute -bottom-3 -left-3 -z-10 w-full h-full bg-white rounded-md border border-darkest"></div>
</article>